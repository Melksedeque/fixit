generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  TECH
  USER
}

enum TicketStatus {
  OPEN
  IN_PROGRESS
  DONE
  CANCELLED
  WAITING
  CLOSED
}

enum TicketPriority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum MessageType {
  TEXT
  IMAGE
  VIDEO
  AUDIO
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  avatar    String?
  whatsapp  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  ticketsCreated  Ticket[]  @relation("TicketCustomer")
  ticketsAssigned Ticket[]  @relation("TicketTech")
  messages        Message[]
  ticketHistories TicketHistory[]

  @@map("users")
}

model Ticket {
  id          String         @id @default(cuid())
  title       String
  description String
  status      TicketStatus   @default(OPEN)
  priority    TicketPriority @default(MEDIUM)
  
  deadlineForecast DateTime?
  deliveryDate     DateTime?
  executionTime    Int?      // Minutes
  closedAt         DateTime?
  category         String?
  slaHours         Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  customerId String
  customer   User   @relation("TicketCustomer", fields: [customerId], references: [id])

  assignedToId String?
  assignedTo   User?   @relation("TicketTech", fields: [assignedToId], references: [id])

  messages Message[]
  histories TicketHistory[]

  @@map("tickets")
}

enum TicketHistoryActionType {
  STATUS_CHANGE
  ASSIGNMENT
  PRIORITY_CHANGE
}

model TicketHistory {
  id         String                  @id @default(cuid())
  ticketId   String
  ticket     Ticket                  @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  actionType TicketHistoryActionType
  oldValue   String?
  newValue   String?
  userId     String
  user       User                    @relation(fields: [userId], references: [id])
  createdAt  DateTime                @default(now())

  @@map("ticket_history")
}
model Message {
  id      String      @id @default(cuid())
  content String
  type    MessageType @default(TEXT)
  fileUrl String?

  createdAt DateTime @default(now())

  ticketId String
  ticket   Ticket @relation(fields: [ticketId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id])

  @@map("messages")
}
